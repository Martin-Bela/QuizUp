<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:QuizUp.MAUI.Views"
                       xmlns:v="clr-namespace:QuizUp.MAUI.Views"
                       xmlns:vm="clr-namespace:QuizUp.MAUI.ViewModels"
                       x:Class="QuizUp.MAUI.Views.QuestionView"
                       x:DataType="vm:QuestionViewModel"
                       Title="QuestionView"
>
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*">
        <Label Grid.ColumnSpan="2" Text="{Binding QuizQuestion.Question}"/>

        <Button Grid.Row="1" Grid.Column="0" Text="{Binding QuizQuestion.Answer1}" Command="{Binding AnswerCommand}" CommandParameter="0"/>
        <Button Grid.Row="1" Grid.Column="1" Text="{Binding QuizQuestion.Answer2}" Command="{Binding AnswerCommand}" CommandParameter="1"/>
        <Button Grid.Row="2" Grid.Column="0" Text="{Binding QuizQuestion.Answer3}" Command="{Binding AnswerCommand}" CommandParameter="2"/>
        <Button Grid.Row="2" Grid.Column="1" Text="{Binding QuizQuestion.Answer4}" Command="{Binding AnswerCommand}" CommandParameter="3"/>
    </Grid>
</views:ContentPageBase>