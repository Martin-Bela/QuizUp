<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizUp.MAUI.Views.JoinGameView"
             xmlns:views="clr-namespace:QuizUp.MAUI.Views"
             xmlns:v="clr-namespace:QuizUp.MAUI.Views"
             xmlns:vm="clr-namespace:QuizUp.MAUI.ViewModels"
             x:DataType="vm:JoinGameViewModel"
             Title="JoinGame"
             >
    <VerticalStackLayout>
        <Entry Placeholder="Enter Game Code" Text="{Binding GameId}"/>
        <Button Text="Join Game" Command="{Binding JoinGameCommand}"/>
    </VerticalStackLayout>
</views:ContentPageBase>