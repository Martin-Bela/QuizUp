<?xml version="1.0" encoding="utf-8" ?>
<v:ViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:v="clr-namespace:QuizUp.MAUI.Views"
                       xmlns:vm="clr-namespace:QuizUp.MAUI.ViewModels"
                       xmlns:converters="clr-namespace:QuizUp.MAUI.Converters"
                       x:Class="QuizUp.MAUI.Views.StartGameView"
                       x:DataType="vm:StartGameViewModel"
                       Shell.TabBarIsVisible="False">
    <FlexLayout AlignContent="Center" Direction="Column" JustifyContent="SpaceEvenly" Margin="10">
        <Label Text="{Binding GameStartData.QuizName}" HorizontalTextAlignment="Center" FontSize="36"/>
        <VerticalStackLayout>
            <Label Text="Passcode:" HorizontalTextAlignment="Center" FontSize="30"/>
            <Label Text="{Binding GameStartData.PassCode}" HorizontalTextAlignment="Center" FontSize="36"/>
        </VerticalStackLayout>
        <Label Text="{Binding Path=GameStartData.Players.Count, StringFormat='Number of players: {0}'}" 
               HorizontalTextAlignment="Center"
               FontSize="30"/>
        <Button Text="Start Game" Command="{Binding StartGameCommand}" FontSize="36"/>
    </FlexLayout>
</v:ViewBase>