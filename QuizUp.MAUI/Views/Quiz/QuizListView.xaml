<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuizUp.MAUI.Views"
             xmlns:view_models="clr-namespace:QuizUp.MAUI.ViewModels"
             xmlns:common_models="clr-namespace:QuizUp.MAUI.Services.Rest;assembly=QuizUp.MAUI"
             x:Class="QuizUp.MAUI.Views.QuizListView"
             x:DataType="view_models:QuizListViewModel">
    <Grid RowDefinitions="Auto, *">
        <Button VerticalOptions="Center" HorizontalOptions="Center" Command="{Binding StartQuizCommand}" Text="Create Debug Game!" />
        <ListView ItemsSource="{Binding Quizzes}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="common_models:QuizSummaryModel">
                    <ViewCell>
                        <Grid Padding="10" ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" Text="{Binding Title}"/>
                            <Button Grid.Column="1" Text="Start"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</views:ViewBase>