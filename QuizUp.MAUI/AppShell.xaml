<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizUp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:QuizUp.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="QuizUp.MAUI">

    <Shell.FlyoutHeader>
        <Grid HorizontalOptions="Start">
            <Image HeightRequest="50"
                   HorizontalOptions="Start"
                   Margin="0, 10, 0, 0"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home">
        <ShellContent Title="HomeTitle" ContentTemplate="{DataTemplate v:MainPage}" Route="MainPage"/>
    </FlyoutItem>

    <FlyoutItem Title="SignalR">
        <ShellContent Title="SignalRTitle" ContentTemplate="{DataTemplate v:SignalRView}" Route="SignalR" />
    </FlyoutItem>

    <FlyoutItem Title="Question">
        <ShellContent Title="Question" ContentTemplate="{DataTemplate v:QuestionView}" Route="Question" />
    </FlyoutItem>

    <FlyoutItem Title="JoinGame">
        <ShellContent Title="JoinGame" ContentTemplate="{DataTemplate v:JoinGameView}" Route="JoinGame" />
    </FlyoutItem>

    <FlyoutItem Title="NextQuestion">
        <ShellContent Title="NextQuestion" ContentTemplate="{DataTemplate v:NextQuestionView}" Route="NextQuestion" />
    </FlyoutItem>

</Shell>
