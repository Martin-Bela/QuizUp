<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:constants="clr-namespace:QuizUp.MAUI.Resources.Constants"
             x:Class="QuizUp.MAUI.Resources.Styles.LabelStyle">
    <Style x:Key="TitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TitleColor}" />
        <Setter Property="FontFamily" Value="{x:Static constants:Fonts.Medium}" />
        <Setter Property="FontSize" Value="14" />
    </Style>
</ResourceDictionary>