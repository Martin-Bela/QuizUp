<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:constants="clr-namespace:QuizUp.MAUI.Resources.Constants"
             x:Class="QuizUp.MAUI.Resources.Styles.PageHeaderStyle">
    <Style x:Key="PageHeaderStyle" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*, *, *" />
        <Setter Property="Padding" Value="15, 0" />
        <Setter Property="BackgroundColor" Value="{StaticResource PageHeaderBackgroundColor}" />
    </Style>
    
    <Style x:Key="PageHeaderLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PageHeaderLabelColor}" />
        <Setter Property="FontFamily" Value="{x:Static constants:Fonts.Medium}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="0, 20" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>